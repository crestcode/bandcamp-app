<%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
	<fieldset>
		<% if @post.errors.any? %>
			<div class='alert alert-error'>
				<%= @post.errors.full_messages.join("<br>").html_safe %>		
			</div>
		<% end %>
		<legend>Submit a new link</legend>
		<div class="control-group">
			<%= f.label :url, 'Bandcamp URL:', :class => 'control-label' %>
			<div class="controls">
				<%= f.text_field :url, :placeholder => 'URL', :class => 'text_field' %>
			</div>
		</div>
		<br>
		<div class="form-actions">
			<%= f.submit 'Submit URL!', :class => 'btn btn-primary' %>
			<%= link_to 'Cancel', posts_path, :class => 'btn' %>
		</div>
	</fieldset>
<% end %>