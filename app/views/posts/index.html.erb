<h2>All Posts</h2>

<%= paginate @posts %>

<table class="table table-striped table-hover">
	<tbody>
		<% @posts.each do |post| %>
		<tr>
			<td><%= link_to post.title, post_path(post) %> by <%= post.artist %></td>
		</tr<
	</tbody>
<% end %>
</table>

<%= link_to 'Submit new post', new_post_path, :class => 'btn btn-primary' %>